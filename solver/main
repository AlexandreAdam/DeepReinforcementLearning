

from dynamic4 import DynamicGame
from solver.Node import Node
from solver.Solver import Solver
import numpy as np

game = DynamicGame(grid_shape=(4, 5))

game.step(18)
game.step(17)
game.step(13)
game.step(16)
game.step(11)
game.step(19)
game.step(14)
game.step(12)

print(game)

solver = Solver(game.gameState)
print(solver.negamax(solver.root_node, -float('inf'), float('inf')))


"""
BUG:
    -ONLY RETURNS VALID SCORE WHEN NEXT MOVE IS WINNER, RECURSION DOES NOT RETURN VALID SCORES
"""